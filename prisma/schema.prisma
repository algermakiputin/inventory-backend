generator client {
  provider = "prisma-client-js"
//  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            Int         @id @default(autoincrement())
  active        Boolean
  name          String
  description   String
  price         Float
  stockQuantity Int         @default(0)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  OrderItem     OrderItem[]
  Supplier      Supplier    @relation(fields: [supplierId], references: [id])
  supplierId    Int
}

model Customer {
  id        Int      @id @default(autoincrement())
  active    Boolean
  name      String
  email     String
  createdAt DateTime @default(now())
}

model Order {
  id        Int         @id @default(autoincrement())
  name      String
  createdAt DateTime    @default(now())
  OrderItem OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
  unitPrice Float
}

model Supplier {
  id      Int       @id @default(autoincrement())
  name    String
  email   String
  Product Product[]
}
